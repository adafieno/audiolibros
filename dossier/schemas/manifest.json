{
  "$id": "https://example.org/schemas/dossier/manifest.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Dossier Manifest",
  "type": "object",
  "required": ["version", "components", "compat"],
  "properties": {
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "components": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "path", "schema", "checksum", "updated_at"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "path": { "type": "string", "minLength": 1 },
          "schema": { "type": "string", "format": "uri" },
          "checksum": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "updated_at": { "type": "string", "format": "date-time" }
        },
        "additionalProperties": false
      }
    },
    "compat": {
      "type": "object",
      "required": ["min_compiler", "ssml_limits"],
      "properties": {
        "min_compiler": { "type": "string", "pattern": "^[>=<~^]*\\d+\\.\\d+(?:\\.\\d+)?$" },
        "ssml_limits": {
          "type": "object",
          "required": ["max_kb_per_request", "max_voice_tags_per_request"],
          "properties": {
            "max_kb_per_request": { "type": "integer", "minimum": 1 },
            "max_voice_tags_per_request": { "type": "integer", "minimum": 1 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
