{
  "$id": "https://example.org/schemas/dossier/voices.cast.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Voices Cast",
  "type": "object",
  "required": ["cast"],
  "properties": {
    "cast": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["character_id", "voice_id"],
        "properties": {
          "character_id": { "type": "string", "pattern": "^[a-z0-9_]+$" },
          "voice_id": { "type": "string", "minLength": 1 },
          "style": { "type": "string", "default": "narration-neutral" },
          "alternatives": { "type": "array", "items": { "type": "string" } },
          "requires_review": { "type": "boolean", "default": true }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
