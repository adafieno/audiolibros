{
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "description": "AI-powered audiobook production studio with multi-language support",
    "author": {
        "name": "Agust√≠n Da Fieno Delucchi",
        "email": "adafieno@hotmail.com"
    },
    "homepage": "https://your-website.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/yourusername/khipu-studio.git"
    },
    "scripts": {
        "lint": "eslint .",
        "preview": "vite preview",
        "dev": "concurrently -k \"vite\" \"cross-env VITE_DEV=1 electron .\"",
        "build:ui": "vite build",
        "build": "npm run build:ui && electron-builder",
        "build:win": "npm run build:ui && electron-builder --win",
        "build:mac": "npm run build:ui && electron-builder --mac",
        "build:linux": "npm run build:ui && electron-builder --linux",
        "build:all": "npm run build:ui && electron-builder --win --mac --linux"
    },
    "dependencies": {
        "@tanstack/react-table": "^8.21.3",
        "howler": "^2.2.4",
        "i18next": "^25.5.0",
        "i18next-browser-languagedetector": "^8.2.0",
        "i18next-icu": "^2.4.0",
        "react": "^19.1.1",
        "react-dom": "^19.1.1",
        "react-hook-form": "^7.62.0",
        "react-i18next": "^15.7.3",
        "react-router-dom": "^7.8.2",
        "wavesurfer.js": "^7.10.1",
        "zod": "^4.1.5",
        "zustand": "^5.0.8"
    },
    "devDependencies": {
        "sharp": "^0.32.1",
        "@eslint/js": "^9.33.0",
        "@types/node": "^24.3.1",
        "@types/react": "^19.1.12",
        "@types/react-dom": "^19.1.9",
        "@vitejs/plugin-react": "^5.0.2",
        "concurrently": "^9.2.1",
        "cross-env": "^10.0.0",
        "electron": "^38.0.0",
        "electron-builder": "^26.0.12",
        "eslint": "^9.33.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.20",
        "globals": "^16.3.0",
        "typescript": "~5.8.3",
        "typescript-eslint": "^8.39.1",
        "vite": "^7.1.2"
    },
    "name": "khipu-studio",
    "productName": "Khipu Studio",
    "main": "./electron/main.cjs",
    "build": {
        "appId": "com.khipu.studio",
        "files": [
            "dist/**",
            "electron/**",
            "../py/**",
            "../bin/**",
            "!**/*.map"
        ],
        "asar": true,
        "extraResources": [
            {
                "from": "../py",
                "to": "py"
            },
            {
                "from": "../bin",
                "to": "bin"
            },
            {
                "from": "../assets/icons",
                "to": "assets/icons"
            }
        ],
        "mac": {
            "icon": "../assets/icons/khipu_studio.icns",
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": ["x64", "arm64"]
                }
            ]
        },
        "win": {
            "icon": "../assets/icons/icon_256x256.png",
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                }
            ],
            "signtoolOptions": null,
            "signAndEditExecutable": false
        },
        "linux": {
            "icon": "../assets/icons/",
            "category": "AudioVideo;Audio;AudioVideoEditing",
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64"]
                },
                {
                    "target": "deb",
                    "arch": ["x64"]
                },
                {
                    "target": "rpm",
                    "arch": ["x64"]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Khipu Studio",
            "installerLanguages": ["en_US", "es_ES", "pt_BR"],
            "language": "1033"
        }
    },
    "devDependenciesOptional": {
        "playwright": "^1.40.0",
        "puppeteer": "^21.0.0"
    }
}
